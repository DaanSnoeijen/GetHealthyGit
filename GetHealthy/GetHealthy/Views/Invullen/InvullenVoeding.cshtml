@{
    ViewData["Title"] = "InvullenVoeding";
}
<h2>Wat heeft u vandaag gegeten?</h2>
<br />
<form>
    <input type="search" />
    <br />
    <br />
    @{
        foreach (GetHealthy.Models.ProductViewModel item in Model)
        {
            <input type="checkbox" id="@item.naam">
            <label for="@item.naam">@item.naam</label>
        }
    }
    <br />
    <select name="hoeveelheid" value="Hoeveelheid">
        <option value="gram">Gram</option>
        <option value="milliliter">Milliliter</option>
    </select>
    <br />
    <br />
    <input type="button" value="Toevoegen" />
    <input type="button" value="Zelf toevoegen" />
    <input type="button" value="Berekenen" onclick="window.location.href = '@Url.Action("Uitkomst", "Berekening")';" />
    <br />
    <br />
    <h5>Uw toegevoegde producten:</h5>
</form>